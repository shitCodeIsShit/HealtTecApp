<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".INFOActivity">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="190dp"
        android:layout_height="634dp"
        android:layout_marginTop="22dp"
        android:text="Alle 10 pistettä: Vielä voit parantaa reilusti        10-19 pistettä: Parannettavaa löytyy, mutta suunta on oikea!           20-29 pistettä: Ihan hyvin menee!        30-39 pistettä: Loistavasti menee!        Yli 40 pistettä: Mahtavaa!"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/palaainfostabutton"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_marginBottom="46dp"
        android:padding="5sp"
        android:text="PALAA"
        app:layout_constraintBottom_toBottomOf="@+id/textViewInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
